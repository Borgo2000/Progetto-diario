<Window x:Class="Progetto_diario.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nuovo Diario"
        Height="240"
        Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1A1A1A">

    <StackPanel Margin="15">

        <TextBlock Text="Inserisci il nome del diario:"
                   Foreground="White"
                   FontSize="14"
                   Margin="0,0,0,10"/>

        <!-- NOME -->
        <TextBox x:Name="txtInput"
                 Height="28"
                 FontSize="14"
                 Margin="0,0,0,15"/>

        <!-- CHECKBOX PASSWORD -->
        <CheckBox x:Name="chkPassword"
                  Content="Proteggi con password"
                  Foreground="White"
                  FontSize="14"
                  Margin="0,0,0,10"
                  Checked="chkPassword_Checked"
                  Unchecked="chkPassword_Unchecked"/>

        <!-- PASSWORD (inizialmente nascosta) -->
        <PasswordBox x:Name="txtPassword"
                     Height="28"
                     FontSize="14"
                     Margin="0,0,0,15"
                     Visibility="Collapsed"/>

        <!-- BOTTONE OK -->
        <Button Content="OK"
                Width="80"
                Height="32"
                HorizontalAlignment="Right"
                Click="Ok_Click"/>
    </StackPanel>
</Window>
