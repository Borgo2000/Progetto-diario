<Window x:Class="Progetto_diario.PasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inserisci Password"
        Height="180"
        Width="320"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1A1A1A">

    <StackPanel Margin="15">

        <TextBlock Text="Inserisci la password:"
                   Foreground="White"
                   FontSize="14"
                   Margin="0,0,0,10"/>

        <PasswordBox x:Name="txtPassword"
                     Height="28"
                     FontSize="14"
                     Margin="0,0,0,15"/>

        <Button Content="OK"
                Width="80"
                Height="32"
                HorizontalAlignment="Right"
                Click="Ok_Click"/>
    </StackPanel>
</Window>
