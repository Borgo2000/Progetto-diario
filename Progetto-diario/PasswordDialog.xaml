<Window x:Class="Progetto_diario.PasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inserisci Password"
        Height="180"
        Width="320"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black"/>
            <GradientStop Color="#FF241339" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <StackPanel Margin="15">

        <TextBlock Text="Inserisci la password:"
                   Foreground="White"
                   FontSize="14"
                   Margin="0,0,0,10"/>

        <PasswordBox x:Name="txtPassword"
                     Height="28"
                     FontSize="14"
                     Margin="0,0,0,15"/>

        <Button Content="OK"
                Width="80"
                Height="32"
                HorizontalAlignment="Right"
                Click="Ok_Click"/>
    </StackPanel>
</Window>
