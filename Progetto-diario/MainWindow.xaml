<Window x:Class="Progetto_diario.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="550" Width="900">

    <Window.Resources>

        <!-- 🧱 BOTTONI MODERNI -->
        <Style x:Key="ModernFlatButton" TargetType="Button">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.35"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 🔮 DIARI: bordo glassmorphic + hover solo sul bordo -->
        <Style x:Key="DiaryCardStyle" TargetType="Rectangle">
            <Setter Property="RadiusX" Value="14"/>
            <Setter Property="RadiusY" Value="14"/>
            <Setter Property="Stroke" Value="#33FFFFFF"/>
            <Setter Property="StrokeThickness" Value="1.5"/>
            <Setter Property="Opacity" Value="0.95"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="14"
                                      ShadowDepth="0"
                                      Opacity="0.35"
                                      Color="#66222A3F"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <!-- HOVER: ingrandimento + bordo blu acceso + glow -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.06" ScaleY="1.06"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Stroke" Value="#00CFFF"/>
                    <Setter Property="StrokeThickness" Value="2.5"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="26"
                                              ShadowDepth="0"
                                              Opacity="0.9"
                                              Color="#8000CFFF"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                
                
                
                <Trigger Property="Tag" Value="selected">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.06" ScaleY="1.06"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Stroke" Value="#00CFFF"/>
                    <Setter Property="StrokeThickness" Value="2.5"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="26"
                              ShadowDepth="0"
                              Opacity="0.9"
                              Color="#8000CFFF"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>

            </Style.Triggers>
        </Style>

        <!-- ✨ PULSANTE +: IMAGE con glow + animazioni -->
        <Style x:Key="PlusImageStyle" TargetType="Image">
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#8A2BE2"
                                      BlurRadius="18"
                                      ShadowDepth="0"
                                      Opacity="0.9"/>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <!-- HOVER: glow più forte -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#7B68EE"
                                              BlurRadius="30"
                                              ShadowDepth="0"
                                              Opacity="1"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>

                <!-- CLICK GIÙ -->
                <EventTrigger RoutedEvent="MouseLeftButtonDown">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                             To="0.9" Duration="0:0:0.08"/>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                             To="0.9" Duration="0:0:0.08"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>

                <!-- CLICK SU: bounce -->
                <EventTrigger RoutedEvent="MouseLeftButtonUp">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                             To="1.15" Duration="0:0:0.12" AutoReverse="True"/>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                             To="1.15" Duration="0:0:0.12" AutoReverse="True"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <!-- 🌌 SFONDO SFUMATO -->
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#241339" Offset="0"/>
                <GradientStop Color="#050816" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <!-- TITOLO MENU -->
        <Label x:Name="label_menuPrinc" Content="MENU"
       HorizontalAlignment="Center"
       VerticalAlignment="Top"
       Margin="0,30,0,0"
       Width="180"
       Height="55"
       Foreground="White"
       BorderThickness="2"
       FontSize="24"
       FontWeight="Bold"
       HorizontalContentAlignment="Center"
       VerticalContentAlignment="Center"
       Panel.ZIndex="1000"/>

      
        <!-- DIARI ALLINEATI -->
        <UniformGrid x:Name="DiaryGrid" Rows="1" Columns="4" Margin="60,60,60,0" VerticalAlignment="Top" Height="274"></UniformGrid>



        <!-- PULSANTE + CENTRATO -->
        <Grid Width="200"
      Height="200"
      HorizontalAlignment="Left"
      VerticalAlignment="Top"
      Margin="60,302,0,0"
      Panel.ZIndex="50">

            <Image x:Name="img_button_aggiungi"
           Source="/piu1.png"
           Width="148"
           Height="178"
           Style="{StaticResource PlusImageStyle}"
           MouseLeftButtonUp="img_button_aggiungi_MouseLeftButtonUp"/>
        </Grid>

        <!-- BOTTONI IN BASSO -->
        <Button x:Name="button_elimina" Content="Elimina" Background="#E53935" Style="{StaticResource ModernFlatButton}" HorizontalAlignment="Left" Margin="390,420,0,0" Width="130" Height="50" Click="button_elimina_Click"/>
        <Button x:Name="button_apriDiario" Content="Apri diario" Background="#1E88E5" Style="{StaticResource ModernFlatButton}" HorizontalAlignment="Left" Margin="525,420,0,0" Width="130" Height="50" Click="click_apri"/>
        <Button x:Name="button_accesso" Content="Accesso libero" Background="#3A3F47" Style="{StaticResource ModernFlatButton}" HorizontalAlignment="Left" Margin="660,420,0,0" Width="150" Height="50"/>
    </Grid>
</Window>