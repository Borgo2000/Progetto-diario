<Window x:Class="Progetto_diario.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Progetto_diario"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="900">
    <Grid>
        <Button x:Name="button_apriDiario" Content="Apri diario" HorizontalAlignment="Left" Margin="538,377,0,0" VerticalAlignment="Top" Height="55" Width="147"/>
        <Button x:Name="button_elimina" Content="elimina" HorizontalAlignment="Left" Height="66" Margin="304,424,0,0" VerticalAlignment="Top" Width="112"/>
        <Label x:Name="label_stato" Content="aperto" HorizontalAlignment="Left" Height="30" Margin="126,442,0,0" VerticalAlignment="Top" Width="132"/>
        <Label x:Name="Label_menu" Content="MENU" HorizontalAlignment="Left" Height="47" Margin="46,20,0,0" VerticalAlignment="Top" Width="148" Background="White" BorderThickness="2,2,2,2" FontSize="20" FontWeight="Bold" BorderBrush="Black"/>
        <Rectangle x:Name="rect_img2" HorizontalAlignment="Left" Height="134" Margin="244,123,0,0" Stroke="Black" VerticalAlignment="Top" Width="148" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.184"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
            <Rectangle.Fill>
                <ImageBrush ImageSource="/diario2.png" Stretch="Uniform" TileMode="None"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle x:Name="rect_img1" HorizontalAlignment="Left" Height="134" Margin="46,123,0,0" Stroke="Black" VerticalAlignment="Top" Width="148">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/diario1.png" Stretch="Uniform"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle x:Name="rect_img3" HorizontalAlignment="Left" Height="134" Margin="442,123,0,0" Stroke="Black" VerticalAlignment="Top" Width="147">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/Progetto senza titolo.png" Stretch="Uniform"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle x:Name="rect_img7" HorizontalAlignment="Left" Height="134" Margin="640,123,0,0" Stroke="Black" VerticalAlignment="Top" Width="147">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/diario7.png" Stretch="Uniform"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle HorizontalAlignment="Left" Height="1" Margin="386,-198,0,0" Stroke="Black" VerticalAlignment="Top" Width="4"/>
        <Rectangle x:Name="rect_button_aggiungi" HorizontalAlignment="Left" Height="134" Margin="46,288,0,0" Stroke="Black" VerticalAlignment="Top" Width="148">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/piu.png"/>
            </Rectangle.Fill>
        </Rectangle>

    </Grid>
</Window>
