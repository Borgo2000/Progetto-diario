<Window x:Class="Progetto_diario.FinestraPagina"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FinestraPagina" Height="788" Width="680">

    <Window.Resources>

        <!-- STILE PULSANTE EMOJI -->
        <Style x:Key="GlowButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#2A1B3D"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#8A2BE2"
                                      BlurRadius="12"
                                      ShadowDepth="0"
                                      Opacity="0.6"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2F1A44"/>
                    <!-- viola più scuro -->
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#7A4FCB" 
                              BlurRadius="14"
                              ShadowDepth="0"
                              Opacity="0.5"/>
                            <!-- glow più leggero -->
                        </Setter.Value>
                    </Setter>
                </Trigger>

            </Style.Triggers>
        </Style>

        <!-- STILE PULSANTE SALVA -->
        <Style x:Key="SaveButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#1E88E5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#1E88E5"
                                      BlurRadius="12"
                                      ShadowDepth="0"
                                      Opacity="0.6"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2874C8"/>
                    <!-- blu meno acceso -->
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#5FA8E0"
                                                BlurRadius="14"
                                                ShadowDepth="0"
                                                Opacity="0.5"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>


            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid Background="#241339">

        <!-- TEMPLATE -->

        <!-- MUSICA -->


        <!-- AREA DI SCRITTURA -->
        <RichTextBox x:Name="textBox_contenuto"
                     HorizontalAlignment="Center"
                     Margin="0,98,0,40"
                     VerticalAlignment="Top"
                     Width="634"
                     Height="539"
                     FontSize="16"
                     Foreground="Gray"
                     Background="#1B102B"
                     BorderBrush="#3A2A4D"/>

        <!-- EMOJI INSERITE (FISSE IN BASSO A SINISTRA) -->
        <StackPanel x:Name="emojiInsertedPanel"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="23,640,0,0"/>

        <!-- PULSANTE EMOJI -->
        <Button x:Name="button_emoji"
                Content="Emoji"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="23,689,0,0"
                Width="110"
                Height="38"
                Click="button_emoji_Click"
                Style="{StaticResource GlowButton}"/>

        <!-- MENU EMOJI -->
        <StackPanel x:Name="emojiPanel"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="140,689,0,0"
                    Visibility="Collapsed">

            <Image Source="/felice.PNG"
                   Width="32" Height="32"
                   Cursor="Hand"
                   Margin="0,0,8,0"
                   MouseLeftButtonUp="Emoji_Click"/>

            <Image Source="/triste.PNG"
                   Width="32" Height="32"
                   Cursor="Hand"
                   Margin="0,0,8,0"
                   MouseLeftButtonUp="Emoji_Click"/>

            <Image Source="/arrabbiato.PNG"
                   Width="32" Height="32"
                   Cursor="Hand"
                   Margin="0,0,8,0"
                   MouseLeftButtonUp="Emoji_Click"/>

            <Image Source="/innamorato.PNG"
                   Width="32" Height="32"
                   Cursor="Hand"
                   MouseLeftButtonUp="Emoji_Click"/>
        </StackPanel>

        <!-- PULSANTE SALVA -->
        <Button x:Name="button_salva"
                Content="Salva"
                HorizontalAlignment="Left"
                Margin="548,689,0,0"
                VerticalAlignment="Top"
                Width="100"
                Height="38"
                Style="{StaticResource SaveButton}" Cursor="" Click="button_salva_Click"/>
        <DatePicker x:Name="dataPicker" HorizontalAlignment="Left" Height="22" Margin="508,30,0,0" VerticalAlignment="Top" Width="149"/>

    </Grid>
</Window>
