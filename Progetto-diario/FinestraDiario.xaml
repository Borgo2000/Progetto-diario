<Window x:Class="Progetto_diario.FinestraDiario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FinestraDiario" Height="850" Width="1500"
        Background="#1A1028">

    <Window.Resources>
        <!-- ✨ DIARY CARD STYLE – Glow + Hover + Zoom -->
        <Style x:Key="DiaryCardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background" Value="#241339"/>
            <Setter Property="BorderBrush" Value="#5A3FFF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#5A3FFF"
                              BlurRadius="18"
                              ShadowDepth="0"
                              Opacity="0.45"/>
                </Setter.Value>
            </Setter>

            <Style.Triggers>

                <!-- HOVER: ingrandimento + glow più forte -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.06" ScaleY="1.06"/>
                        </Setter.Value>
                    </Setter>

                    <Setter Property="BorderBrush" Value="#8A2BE2"/>
                    <Setter Property="BorderThickness" Value="3"/>

                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#8A2BE2"
                                      BlurRadius="28"
                                      ShadowDepth="0"
                                      Opacity="0.9"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>

            </Style.Triggers>
        </Style>


        <!-- ✨ PULSANTE +: IMAGE con glow + animazioni -->
        <Style x:Key="PlusImageStyle" TargetType="Image">
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#8A2BE2"
                              BlurRadius="18"
                              ShadowDepth="0"
                              Opacity="0.9"/>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <!-- HOVER: glow più forte -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#7B68EE"
                                      BlurRadius="30"
                                      ShadowDepth="0"
                                      Opacity="1"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>

                <!-- CLICK GIÙ -->
                <EventTrigger RoutedEvent="MouseLeftButtonDown">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                     To="0.9" Duration="0:0:0.08"/>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                     To="0.9" Duration="0:0:0.08"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>

                <!-- CLICK SU: bounce -->
                <EventTrigger RoutedEvent="MouseLeftButtonUp">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                     To="1.15" Duration="0:0:0.12" AutoReverse="True"/>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                     To="1.15" Duration="0:0:0.12" AutoReverse="True"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>


    </Window.Resources>
    <Grid>
        <!-- TITOLO -->
        <Label Content="MENU DIARIO"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               Margin="0,20,0,0"
               FontSize="26"
               FontWeight="Bold"
               Foreground="White"/>

        <!-- CARD PAGINE -->
        <UniformGrid Rows="1" Columns="4"
             x:Name="PagesGrid"
             HorizontalAlignment="Center"
             VerticalAlignment="Top"
             Margin="0,31,0,0"
             Width="1455" Height="568" RenderTransformOrigin="0.5,0.5">
            

            

        </UniformGrid>


        <!-- PULSANTE + -->
        <Grid Width="191"
        Height="182"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Margin="66,584,0,0"
        Panel.ZIndex="50">

            <Image x:Name="img_button_aggiungiDiaeio"
        Source="/piu3.PNG"
        Width="148"
        Height="178"
        Style="{StaticResource PlusImageStyle}" Margin="18,11,19,11"
         MouseLeftButtonUp="AggiungiPagina_Click"/>

        </Grid>

        <!-- BOTTONI IN BASSO -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0,0,70,46" Width="280">



            <Button x:Name="button_ApriPagina"
                    Content="Apri pagina"
                    Width="120" Height="45"
                    Background="#3A2A4D"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="clickApri"
                    Margin="10,0,0,0"
                    />
            <Button x:Name="button_elimina"
                    Content="Elimina"
                    Width="120" Height="45"
                    Background="#3A2A4D"
                    Foreground="White"
                    FontWeight="Bold"
                    Margin="30,0,0,0" Click="button_elimina_Click"
                    />

        </StackPanel>

    </Grid>
</Window>
